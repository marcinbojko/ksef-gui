# KSeFCli — environment variables
# Copy this file to .env and fill in your values.
#   cp .env.example .env
#
# Traefik ACME email and DNS provider credentials are configured separately:
#   traefik/traefik.yml       — static Traefik config (set email there)
#   traefik/dns-provider.env  — DNS API credentials (copy from dns-provider.env.example)

# ── Timezone ──────────────────────────────────────────────────────────────────
TZ=Europe/Warsaw

# ── Traefik ───────────────────────────────────────────────────────────────────
TRAEFIK_TAG=v3.6.7

# ── KSeFCli ───────────────────────────────────────────────────────────────────
KSEFCLI_TAG=latest
KSEFCLI_PORT=18150
# Hostname used by Traefik routing (local DNS or /etc/hosts entry pointing to this host)
KSEFCLI_HOSTNAME=ksef.nas.local

# Optional basic-auth protection (leave empty to disable).
# Generate with:  htpasswd -nb <user> <password>
# Dollar signs must be doubled in .env, e.g.:  admin:$$apr1$$xyz...
KSEFCLI_BASICAUTH_USERS=

# ── Ofelia ────────────────────────────────────────────────────────────────────
OFELIA_TAG=latest
