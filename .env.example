# KSeFCli — environment variables
# Copy this file to .env and fill in your values.
#   cp .env.example .env

# ── Timezone ──────────────────────────────────────────────────────────────────
TZ=Europe/Warsaw

# ── Traefik ───────────────────────────────────────────────────────────────────
TRAEFIK_TAG=v3.3
# Email for Let's Encrypt ACME registration (required)
ACME_EMAIL=admin@example.com
# Certificate resolver name as defined in Traefik static config
# Values: letsencrypt (TLS challenge, default), cloudflare (DNS challenge), etc.
TRAEFIK_CERT_RESOLVER=letsencrypt

# ── KSeFCli ───────────────────────────────────────────────────────────────────
KSEFCLI_TAG=latest
KSEFCLI_PORT=18150
# Public hostname used by Traefik routing (must resolve to this host)
KSEFCLI_HOSTNAME=ksef.example.com

# Basic-auth protection (leave empty to disable public access control).
# Generate with:  htpasswd -nb <user> <password>
# Dollar signs must be doubled in .env, e.g.:  admin:$$apr1$$xyz...
KSEFCLI_BASICAUTH_USERS=

# ── Ofelia ────────────────────────────────────────────────────────────────────
OFELIA_TAG=latest
